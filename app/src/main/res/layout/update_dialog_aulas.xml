<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:padding="10dp"
        android:text="Editar Aula"
        android:textStyle="bold"
        android:textColor="#000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/updateTextIdAul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Id" />

    <EditText
        android:id="@+id/updateTextNomAul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Nombre" />

    <EditText
        android:id="@+id/updateTextLatAul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Latitud" />

    <EditText
        android:id="@+id/updateTextLongAul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Longitud" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonDeleteUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete" />

        <Button
            android:id="@+id/buttonUpdateUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update" />
    </LinearLayout>


</LinearLayout>