<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:padding="10dp"
        android:text="Editar Curso"
        android:textStyle="bold"
        android:textColor="#000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/updateTextname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name" />

    <EditText
        android:id="@+id/updateTextnumestudiantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Numero de estudiantes" />

    <EditText
        android:id="@+id/updateTexthorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Horario" />

    <EditText
        android:id="@+id/updateTextidprofesor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter id profesor" />

    <EditText
        android:id="@+id/updateTextidaula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter id Aula" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonDeleteUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete" />

        <Button
            android:id="@+id/buttonUpdateUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update" />
    </LinearLayout>


</LinearLayout>